<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Fisherman" parent="@android:attr/textAppearanceLarge">
        <item name="android:textColor">#00ff66</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#00000000</item>
        <item name="android:actionMenuTextColor">#00ff66</item>
    </style>

    <style name="Fisherman.Orange">
        <item name="android:textColor">#ff9900</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    
    <style name="Fisherman.OrangeMedium">
        <item name="android:textColor">#ff9900</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="Fisherman.OrangeSmall">
        <item name="android:textColor">#ff9900</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Fisherman.OrangeSmallMenuItem">
        <item name="android:textColor">#ff9900</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_margin">1sp</item>
    </style>

    <style name="Fisherman.BlueSmall">
        <item name="android:textColor">#42c0fb</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="Fisherman.BlueMedium">
        <item name="android:textColor">#42c0fb</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="Fisherman.GreenSmall">
        <item name="android:textColor">#3fe547</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="Fisherman.GreenMedium">
        <item name="android:textColor">#3fe547</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>
    
    <style name="Fisherman.White">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="FishermanActionBar" parent="@android:attr/actionBarStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="FishermanSoloStarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mysolostarratingbar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="FishermanSoloStarRatingBar.Medium">
        <item name="android:progressDrawable">@drawable/mysolostarratingbar</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="FishermanRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mymediumfishratingbar</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <style name="FishermanRatingBar.Small">
        <item name="android:progressDrawable">@drawable/myfishratingbar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="FishermanMainMenuTableRowStyle">
        <item name="android:layout_width">300sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginRight">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>