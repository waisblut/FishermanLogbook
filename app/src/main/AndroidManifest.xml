<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waisblut.fishermanlogbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.waisblut.fishermanlogbook.activities.ActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.waisblut.fishermanlogbook.activities.ActivityEventsList"
            android:label="@string/Events" >
        </activity>
        <activity
            android:name="com.waisblut.fishermanlogbook.activities.ActivityEvent"
            android:label="@string/Event"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.waisblut.fishermanlogbook.activities.ActivityFishList"
            android:label="@string/Event" >
        </activity>
    </application>

</manifest>